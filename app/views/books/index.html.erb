
<div class="container pt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list' %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <theader>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </theader>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>a</td><!--<td>userの画像貼り付けが必要</td>-->
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>

