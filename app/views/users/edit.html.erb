<div class="container col-5 mx-auto">
  <h2>User info</h2>
  <div class="row">
    <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>
  <%= form_with model: @user do |f| %>
    <div class="row my-3">Name</div>
    <div>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"col-12" %>
    </div>
    <div class="row my-3">Image</div>
    <div>
      <%= f.file_field :profile_image, placeholder: "Profile_Image", accept: "profile_image" %>
    </div>
    <div class="row my-3">Introduction</div>
    <div>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction", class:"col-12 mb-3" %>
    </div>
    <div class="row">
      <%= f.submit "Update User", class:"btn-secondary btn-sl" %>
    </div>
  <% end %>
</div>
