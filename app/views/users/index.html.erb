<div class="container pt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render partial:'books/list', locals:{user:current_user} %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <theader>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </theader>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show" , user_path(user.id)  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>